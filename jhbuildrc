conditions.add("testing")

#build_policy = "all"

# List of modules to be built by default
modules = ['bigdft',]

# Specific configure arguments for each module
module_autogenargs['libxc'] = "CC=gcc --enable-shared"

module_autogenargs['bigdft'] = "FC=mpif90 CFLAGS='-Wall -g -O2' CXXFLAGS='-g -O2' FCFLAGS='-O2 -g -Wall -fbounds-check' --with-gobject --with-libxc-libs='-L%(prefix)s/lib -lxcf90 -lxc' --with-libxc-incs='-I%(prefix)s/include' --with-yaml-path=%(prefix)s --with-pyyaml-path=%(prefix)s/lib/python2.7/site-packages" % globals()

module_autogenargs['PyYAML'] = "build_ext -I%(prefix)s/include -L%(prefix)s/lib --rpath=%(prefix)s/lib" % globals()